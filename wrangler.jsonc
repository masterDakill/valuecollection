{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "valuecollection",
  "compatibility_date": "2024-10-01",
  "compatibility_flags": ["nodejs_compat"],
  "pages_build_output_dir": "./dist",

  // Base de données D1 pour les collections - CONFIGURÉE (Cloudflare)
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "valeurcollection",
      "database_id": "379e424f-e721-40d8-917f-6e9e3593db5e"
    }
  ],

  // Variables d'environnement pour les API externes
  "vars": {
    "ENVIRONMENT": "development"
  }

  // Secrets à configurer via wrangler secret put :
  // - EBAY_API_KEY : Clé API eBay pour recherche de prix
  // - WORTHPOINT_API_KEY : Clé WorthPoint pour évaluations
  // - OPENAI_API_KEY : Pour l'analyse d'images IA
  // - GOOGLE_BOOKS_API_KEY : Pour évaluation des livres
  // - SPORTSCARDSPRO_API_KEY : Pour cartes de sport
}
