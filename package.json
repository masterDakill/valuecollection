{
  "name": "evaluateur-collection-pro",
  "version": "1.0.0",
  "description": "Évaluateur de Collection Pro avec IA et intégrations API multiples pour Mathieu Chamberland",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=webapp-collections-db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name evaluateur-collection-pro",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "vitest run",
    "test:unit": "VITEST_COVERAGE=true vitest run tests/unit --coverage",
    "test:contract": "vitest run tests/contract --coverage=false",
    "test:e2e": "vitest run tests/e2e --coverage=false",
    "test:full": "npm run test:unit && npm run test:contract && npm run test:e2e",
    "test:smoke": "vitest run tests/e2e --reporter=verbose",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "db:create": "wrangler d1 create webapp-collections-db",
    "db:migrate:local": "wrangler d1 migrations apply webapp-collections-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply webapp-collections-db",
    "db:seed": "wrangler d1 execute webapp-collections-db --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute webapp-collections-db --local",
    "db:console:prod": "wrangler d1 execute webapp-collections-db",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline",
    "api:test-ebay": "node scripts/test-ebay-api.js",
    "api:test-ai": "node scripts/test-ai-analysis.js",
    "backup": "tar -czf backup-$(date +%Y%m%d).tar.gz . --exclude=node_modules --exclude=.git"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@vitest/coverage-v8": "^1.6.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.8",
    "vitest": "^1.6.0",
    "wrangler": "^3.78.0"
  },
  "keywords": [
    "collection",
    "evaluation",
    "ai-analysis",
    "ebay-api",
    "price-evaluation",
    "collectibles",
    "sports-cards",
    "books",
    "vintage",
    "cloudflare-pages",
    "hono",
    "mathieu-chamberland"
  ],
  "author": {
    "name": "Mathieu Chamberland",
    "email": "Math55_50@hotmail.com",
    "company": "Forza Construction Inc."
  },
  "license": "MIT"
}
